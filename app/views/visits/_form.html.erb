<%= form_for @visit do |f| %>

<div class='col-md-6 col-md-offset-3'>
  <div class="stepsDetailsShow specialForm">

  <p>
    <%= f.label :name, :class => "labels", :class => "label1" %>
    <%= f.text_field :name, :required => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :country_id, :class => "labels", :class => "label1" %>
      <% sorted_countries = Country.all.sort_by { |c| c.name } %>
    <%= f.select :country_id, sorted_countries.all.map { |a| [ a.name, a.id ]}, :include_blank => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :theme_id, :class => "labels", :class => "label1" %>
        <% sorted_themes = Theme.all.sort_by { |t| t.name } %>
    <%= f.select :theme_id, sorted_themes.all.map { |a| [ a.name, a.id ]}, :include_blank => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :description, :class => "labels", :class => "label1" %>
    <%= f.text_field :description, :required => true, :class => "inputs", :class => "label2" %>
  </p>



  <p>
    <%= f.label :image, :class => "labels", :class => "label1" %>
    <%= f.url_field :image, :required => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :visitLatitude, :class => "labels", :class => "label1" %>
    <%= f.text_field :visitLatitude, :required => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :visitLongitude, :class => "labels", :class => "label1" %>
    <%= f.text_field :visitLongitude, :required => true, :class => "inputs", :class => "label2" %>
  </p>


<br>

  <%= f.submit %>

</div>
</div>

<% end %>
