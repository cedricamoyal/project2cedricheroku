<div class='container'>
  <div class='row text-center'>
          <div class='col-md-12'>
              <h2>This should show all the countries:</h2>
            </div>
    </div>

    <% if @current_user && @current_user.admin %>

        <br>

          <div class='row text-center'>
                  <div class='col-md-12'>
                        <button type='button' class='btn btn-lg btn-default'><%= link_to "Create a new country", new_country_path %></button>
                  </div>
          </div>

      <br>
    <% end %>



  <% sorted_locations = @locations.sort {|l1, l2| l1.name <=> l2.name } %>
  <% sorted_locations.each do |location| %>

      <% sorted_countries = location.countries.sort {|c1, c2| c1.name <=> c2.name } %>
      <% sorted_countries.each do |country| %>

            <div class='col-md-4'>
                <div class="stepsDetailsShow">

                  <h4><%= link_to country.name, "/countries/#{country.id}" %></h4>

                  <%= link_to(image_tag( country.flag, :class => 'thumbnail'), country) %>

                  <h5>Location: <span><%= link_to country.location.name, "/locations/#{country.location.id}" %></span></h5>
                  <h5>Capital city: <span><%= country.capitalCity %></span></h5>
                  <h5>Language: <span><%= country.language %></span></h5>
                  <h5>Currency: <span><%= country.currency %></span></h5>
                  <h5>Population: <span><%= country.population %></span></h5>
                  <h5>Area: <span><%= country.area %></span></h5>
                  <h5>Population density: <span><%= country.popDensity %></span></h5>
                </div>
        </div>
      <% end %>
    <% end %>

</div>

