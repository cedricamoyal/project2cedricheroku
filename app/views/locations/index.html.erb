
<div class='container'>
  <div class='row text-center'>
          <div class='col-md-12'>
      <h2>This should show all the locations/continents:</h2>
    </div>
</div>


<% sorted_locations = @locations.sort {|l1, l2| l1.name <=> l2.name } %>
<% sorted_locations.each do |location| %>

  <div class='col-md-4'>
    <div class="stepsDetailsShow">
              <h4>Location name: <%= link_to location.name, "/locations/#{location.id}" %></h4>
              <%= link_to(image_tag( location.image, :class => 'thumbnail'), location) %>
              <h5>Population: <span><%= location.population %></span></h5>
              <h5>Area: <span><%= location.area %></span></h5>

              <h5>The different countries:</h5>

              <% sorted_countries = location.countries.sort {|c1, c2| c1.name <=> c2.name } %>
              <% sorted_countries.each do |country| %>
              
                <span>| <%= link_to country.name, "/countries/#{country.id}" %><span>
              <% end %>
    </div>
  </div>

  <% end %>

  </div>
